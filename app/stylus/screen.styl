* {
	margin: 0
	padding: 0
}

#editor {
	min-height: 300px;
	background: #ccc;
	margin: 10px 0;

	max-height: 300px;
	overflow-y: auto;
}

.non-editable {
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
}

#peers {
	margin: 10px 0;
}

.peer {
	display: inline-block;
	padding: 2px 10px;

	margin: 0 10px;

	text-shadow: 0 0 10px #000;
	color: #fff;
}